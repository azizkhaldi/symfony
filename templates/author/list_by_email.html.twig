
{% block content %}
    <h1>Liste des Auteurs par Email</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {% for a in authors %}
                <tr>
                   <td>{{ dump(a.username) }}</td>
                  <td>{{ dump(a.email) }}</td>
                </tr>
             {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_AfficheBook') }}">Retour Ã  la liste des livres</a>
{% endblock %}
